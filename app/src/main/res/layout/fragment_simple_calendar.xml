<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    android:id="@+id/parent"
    android:orientation="vertical">

    <com.stacktips.view.CustomCalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/semi_transparent"
        app:calendarBackgroundColor="@color/background"
        app:calendarTitleTextColor="@color/textColorGrey"
        app:currentDayOfMonthColor="@color/colorPrimary"
        app:dayOfMonthTextColor="@color/black"
        app:dayOfWeekTextColor="@color/ash_light"
        app:disabledDayBackgroundColor="@color/background_light"
        app:disabledDayTextColor="@color/textColorGrey"
        app:selectedDayBackgroundColor="@color/colorAccentDark"
        app:titleLayoutBackgroundColor="@color/white"
        app:weekLayoutBackgroundColor="@color/white" />
</LinearLayout>