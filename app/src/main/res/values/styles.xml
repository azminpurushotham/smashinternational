<resources>

    <!--Base application theme.-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textViewStyle">@style/AppTextView</item>
        <item name="android:buttonStyle">@style/AppPrimaryButton</item>
        <item name="android:editTextStyle">@style/AppEditText</item>
        <item name="android:textAppearanceLarge">@style/AppTextViewLarge</item>
        <item name="android:textAppearanceMedium">@style/AppTextViewMedium</item>
        <item name="android:homeLayout">@style/AppLayout</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:spinnerStyle">@style/Myspinner</item>
        <item name="toolbarStyle">@style/AppToolbar</item>
    </style>
    <!-- Base application theme. -->

    <style name="FullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textViewStyle">@style/AppTextView</item>
    </style>


    <style name="AppLayout">
        <item name="android:background">@color/background</item>
    </style>

    <style name="Toolbar" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="Toolbar.TitleText" parent="android:Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">3dp</item>
    </style>


    <style name="AppTextView" parent="android:Widget.TextView">
        <item name="android:textColor">@color/textColorNormal</item>
        <item name="android:text">Test</item>
        <item name="fontPath">"fonts/HelveticaNeueLTPro_MdCn.otf"</item>
    </style>

    <style name="AppPrimaryButton" parent="android:Widget.Button">
        <item name="android:textColor">@color/selector_white_secondary_white</item>
        <item name="android:height">@dimen/button_height</item>
        <item name="android:text">Button</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/selector_primary_to_primarydark</item>
        <item name="fontPath">"fonts/HelveticaNeueLTPro_MdCn.otf"</item>
    </style>


    <style name="AppAccentButtonRadious" parent="android:Widget.Button">
        <item name="android:textColor">@color/selector_white_secondary_white</item>
        <item name="android:text">Button</item>
        <item name="android:radius">5dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/selector_accent_to_dark_accent_radious</item>
        <item name="fontPath">"fonts/HelveticaNeueLTPro_MdCn.otf"</item>
    </style>

    <style name="AppAccentButton" parent="android:Widget.Button">
        <item name="android:textColor">@color/selector_white_secondary_white</item>
        <item name="android:text">Button</item>
        <item name="android:radius">5dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/selector_accent_to_dark_accent</item>
        <item name="fontPath">"fonts/HelveticaNeueLTPro_MdCn.otf"</item>
    </style>


    <style name="AppCheckedTextView" parent="android:Widget.TextView">
        <item name="android:textColor">@color/textColorNormal</item>
        <item name="android:textSize">15sp</item>
        <item name="android:text">Test</item>
        <item name="fontPath">"fonts/HelveticaNeueLTPro_MdCn.otf"</item>
    </style>

    <style name="AppTextViewLarge" parent="android:TextAppearance.Large">
        <item name="android:textColor">@color/textColorNormal</item>
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:text">Test</item>
        <item name="fontPath">"fonts/HelveticaNeueLTPro_MdCn.otf"</item>

    </style>

    <style name="AppTextViewMedium" parent="android:TextAppearance.Medium">
        <item name="android:textColor">@color/textColorNormal</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:text">Test</item>
        <item name="fontPath">"fonts/HelveticaNeueLTPro_MdCn.otf"</item>
    </style>

    <style name="AppTextViewSmall" parent="android:TextAppearance.Small">
        <item name="android:textColor">@color/textColorNormal</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:text">Test</item>
        <item name="fontPath">"fonts/HelveticaNeueLTPro_MdCn.otf"</item>
    </style>

    <!--Text style-->

    <style name="AppTextViewTitle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/textColorNormal</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:lineSpacingExtra">@dimen/line_spacing</item>
        <item name="fontPath">"fonts/Knockout_HTF28_JuniorFeatherwt.otf"</item>
    </style>


    <style name="AppTextViewLabel" parent="android:Widget.TextView">
        <item name="android:textColor">@color/textColorNormal</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:lineSpacingExtra">@dimen/line_spacing</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="fontPath">"fonts/Knockout_HTF28_JuniorFeatherwt.otf"</item>
    </style>

    <style name="AppTextViewExtraBold" parent="android:Widget.TextView">
        <item name="android:textColor">@color/textColorNormal</item>
        <item name="android:lineSpacingExtra">@dimen/line_spacing</item>
        <item name="fontPath">"fonts/Knockout_HTF28_JuniorFeatherwt.otf"</item>
    </style>


    <style name="AppTextViewSubTitle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/textColorNormal</item>
        <item name="android:textSize">@dimen/subtitle_text_size</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:lineSpacingExtra">@dimen/line_spacing</item>
        <item name="fontPath">"fonts/HelveticaNeueLTPro_MdCn.otf"</item>
    </style>

    <style name="AppTextViewFadeText" parent="android:Widget.TextView">
        <item name="android:textColor">@color/textHint</item>
        <item name="android:textSize">@dimen/subtitle_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/line_spacing</item>
        <item name="android:gravity">center_vertical</item>
        <item name="fontPath">"fonts/HelveticaNeueLTPro_MdCn.otf"</item>
    </style>


    <!--TEXT STYLE-->


    <!--BUtton style-->

    <style name="AppButtonTitle" parent="android:Widget.Button">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:gravity">center_vertical</item>
        <item name="fontPath">"fonts/Knockout_HTF28_JuniorFeatherwt.otf"</item>
    </style>

    <style name="AppButtonSubTitle" parent="android:Widget.Button">
        <item name="android:textColor">@color/textColorNormal</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:gravity">center_vertical</item>
        <item name="fontPath">"fonts/HelveticaNeueLTPro_MdCn.otf"</item>
    </style>

    <style name="AppButtonFadeText" parent="android:Widget.Button">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:gravity">center_vertical</item>
        <item name="fontPath">"fonts/HelveticaNeueLTPro_MdCn.otf"</item>
    </style>


    <!--<item name="android:buttonStyleSmall">@style/Widget.AppCompat.Button.Small</item>-->

    <!--BUtton STYLE-->


    <style name="AppTextViewContent" parent="android:Widget.TextView">
        <item name="android:textColor">@color/textColorNormal</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="fontPath">"fonts/Knockout_HTF28_JuniorFeatherwt.otf"</item>
    </style>


    <style name="AppEditText" parent="android:Widget.EditText">
        <item name="android:textColor">@color/textColorNormal</item>
        <item name="android:textColorHint">@color/textHint</item>
        <item name="android:height">@dimen/edit_text_height</item>
        <item name="android:textSize">15sp</item>
        <item name="android:text">Edittext</item>
        <item name="android:hint">hint</item>
        <item name="fontPath">"fonts/HelveticaNeueLTPro_MdCn.otf"</item>
    </style>

    <style name="AppScrollView" parent="android:Widget.ScrollView">
        <item name="android:scrollbars">none</item>
    </style>

    <style name="AppToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="titleTextAppearance">@style/AppToolBarTitle</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppToolBarTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="fontPath">"fonts/HelveticaNeueLTPro_MdCn.otf"</item>
    </style>

    <style name="Myspinner" parent="android:Widget.Spinner">
        <item name="android:background">@color/white</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textColorHint">@color/textHint</item>
        <item name="android:textSize">14sp</item>
        <item name="fontPath">"fonts/HelveticaNeueLTPro_MdCn.otf"</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="TextAppearenceNavigationItem" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/selector_white_secondary_white</item>
        <item name="fontPath">"fonts/HelveticaNeueLTPro_MdCn.otf"</item>
    </style>


    <style name="ImageProgress" parent="Widget.AppCompat.ProgressBar">

    </style>

    <style name="LabelRegistration" parent="android:Widget.TextView">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="fontPath">"fonts/Knockout_HTF28_JuniorFeatherwt.otf"</item>
    </style>

    <style name="EdittextRegistration" parent="android:Widget.EditText">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:capitalize">words</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="fontPath">"fonts/Knockout_HTF28_JuniorFeatherwt.otf"</item>
    </style>

    <style name="EdittextPrimary" parent="android:Widget.EditText">
        <item name="android:textColor">@color/textColorGrey</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="fontPath">"fonts/Knockout_HTF28_JuniorFeatherwt.otf"</item>
    </style>

    <style name="SpinnerHeader" parent="android:Widget.TextView">
        <item name="android:textColor">@color/textColorNormal</item>
        <item name="android:capitalize">words</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:layout_height">@dimen/spinner_header_height</item>
        <item name="android:drawableRight">@drawable/spinner_dropdown_false</item>
        <item name="android:background">@drawable/selector_ash_to_dark_ash_bottom_strock</item>
        <item name="fontPath">"fonts/Knockout_HTF28_JuniorFeatherwt.otf"</item>
    </style>

    <style name="SpinnerItem" parent="android:Widget.TextView">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:capitalize">words</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:layout_height">@dimen/spinner_header_height</item>
        <item name="android:drawableRight">@drawable/spinner_dropdown_false</item>
        <item name="android:background">@drawable/selector_ash_to_dark_ash_bottom_strock</item>
        <item name="fontPath">"fonts/Knockout_HTF28_JuniorFeatherwt.otf"</item>
    </style>

    <style name="AppNavigationView" parent="Widget.Design.NavigationView">
        <item name="android:listDivider">@color/shadow</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="AppTabLayoutModelProfile" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabPaddingStart">6dp</item>
        <item name="tabPaddingEnd">6dp</item>
        <item name="tabBackground">@color/ash_light</item>
        <item name="tabIndicatorColor">@color/black</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <!-- for text -->
    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/ash_light</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppTabTextAppearanceModelProfile" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">true</item>
    </style>

</resources>
